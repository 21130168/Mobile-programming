            android:layout_height="wrap_content"
            android:text="Truyện"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_toRightOf="@id/btn_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
